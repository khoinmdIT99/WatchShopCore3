@model List<GraniteHouse.Models.ProductsSelectedForAppointment>
@{
    ViewData["Title"] = "_Invoice";
}

    <table border="0" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th class="no">#</th>
                <th class="desc">Name</th>
                <th class="unit">Price</th>
                <th class="qty">Amount</th>
                <th class="total">Total</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                decimal total = 0;
            }
            @foreach (var item in Model)
            {
                i++;               
                <tr>
                    <td class="no">@i</td>
                    <td class="desc">@item.productName</td>
                    <td class="unit">@item.price.ToString("#,##0")</td>
                    <td class="qty">@item.quantity</td>
                    <td class="total">@item.TotalQuantity.ToString("#,##0") VNĐ</td>
                </tr>
                total += item.TotalQuantity;
            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"></td>
                <td colspan="2">SubTotal: </td>
                <td>@total.ToString("#,##0") VNĐ</td>
            </tr>
        </tfoot>
    </table>

