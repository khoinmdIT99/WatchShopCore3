<div class="container">
    <div style="float:left;" class="hover-zoomin">
        <a asp-action="ProductsByCategory" asp-controller="Home" asp-route-id="1"><img style="width:550px;margin-right:10px;" src="~/images/Banner/block_home_category1.jpg" /></a>
    </div>
