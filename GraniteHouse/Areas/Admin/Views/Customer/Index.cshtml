@model GraniteHouse.Models.ViewModel.CustomerViewPage
@{
    ViewData["Title"] = "Index";
}

<form method="get">
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a asp-area="Admin" asp-action="Index" asp-controller="Customer"> <h2 class="text-info"> Customers List</h2></a>
               
                <div class="row">
                    <div class="col-6">
                        <div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Editor("cusPhoneNumber", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="col-2">
                                        <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <table class="table table-striped border">
                    <tr class="table-info">
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Customer Phone
                        </th>
                        <th>
                            Customer Mail
                        </th>
                        <th>
                            Customer Address
                        </th>

                    </tr>

                    @foreach (var item in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.CusName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CusPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CusEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CusAddress)
                            </td>

                        </tr>

                    }
                </table>
            </div>

        </div>
        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
             page-class="btn border" page-class-normal="btn btn-default active"
             page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
    </div>

</form>





