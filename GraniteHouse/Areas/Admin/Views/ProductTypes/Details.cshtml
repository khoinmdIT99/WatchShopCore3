@model GraniteHouse.Models.ViewModel.ProductTypesViewModel
@{
    ViewData["Title"] = "Details";
}



<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2 class="text-info">Product Type Details</h2>
        </div>
        <div class="p-4  rounded">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypes.Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Categories"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductTypes.Category.Name" readonly class="form-control" />
                </div>
            </div>
 
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.ProductTypes.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</div>


