@model IEnumerable<GraniteHouse.Models.ProductTypes>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-6">
                    <a asp-area="Admin" asp-action="Index" asp-controller="ProductTypes"><h2 class="text-info"> Product Type List</h2></a>
                    
                </div>
                <div class="col-6 text-right">
                    <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product Type</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-striped border">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category)
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>

                }
            </table>
        </div>

    </div>
</div>



